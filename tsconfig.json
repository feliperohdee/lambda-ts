{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["scripts/**/*.ts", "src/**/*.ts"],
	"exclude": ["node_modules"]
}
