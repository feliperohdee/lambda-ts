{
	"compilerOptions": {
		"baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
		"outDir": "dist",
        "paths": {
            "@/*": ["src/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "es2020"
    },
	"include": [
		"src/**/*"
	],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ]
}